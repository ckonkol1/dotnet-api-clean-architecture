  "components": {
    "schemas": {
      "CreatePlantRequestModel": {
        "required": [
          "commonName",
          "scientificName",
          "duration",
          "age",
          "url"
        ],
        "type": "object",
        "properties": {
          "commonName": {
            "maxLength": 100,
            "minLength": 2,
            "pattern": "^[a-zA-Z]+$",
            "type": "string",
            "description": "Common plant name"
          },
          "scientificName": {
            "maxLength": 100,
            "minLength": 2,
            "pattern": "^[a-zA-Z]+$",
            "type": "string",
            "description": "Scientific Plant Name"
          },
          "duration": {
            "$ref": "#/components/schemas/Duration"
          },
          "age": {
            "type": "integer",
            "description": "Age of plant in years",
            "format": "int32"
          },
          "url": {
            "maxLength": 200,
            "type": "string",
            "description": "Url to usda.gov plant documenation"
          }
        }
      },
      "Duration": {
        "type": "integer",
        "description": "Duration of plant. Perennial or Annual"
      },
      "PlantResponseModel": {
        "required": [
          "id",
          "commonName",
          "scientificName",
          "duration",
          "age",
          "url"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Generated Id for the plant",
            "format": "uuid"
          },
          "commonName": {
            "type": "string",
            "description": "Common plant name"
          },
          "scientificName": {
            "type": "string",
            "description": "Scientific Plant Name"
          },
          "duration": {
            "type": "string",
            "description": "Duration of plant"
          },
          "age": {
            "type": "integer",
            "description": "Age of plant in years",
            "format": "int32"
          },
          "url": {
            "type": "string",
            "description": "Url to usda.gov plant documenation"
          }
        }
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "UpdatePlantRequestModel": {
        "type": "object",
        "properties": {
          "commonName": {
            "maxLength": 100,
            "pattern": "^[a-zA-Z]+$",
            "type": "string",
            "description": "Common plant name"
          },
          "scientificName": {
            "maxLength": 100,
            "pattern": "^[a-zA-Z]+$",
            "type": "string",
            "description": "Scientific Plant Name"
          },
          "duration": {
            "$ref": "#/components/schemas/Duration"
          },
          "age": {
            "type": "integer",
            "description": "Age of plant in years",
            "format": "int32"
          },
          "url": {
            "maxLength": 200,
            "type": "string",
            "description": "Url to usda.gov plant documenation"
          }
        }
      }
    }
